    pihole:
        container_name: pihole
        image: pihole/pihole:latest
        ports:
            - "53:53/tcp"
            - "53:53/udp"
            - "67:67/udp"
            - "80:80/tcp"
        environment:
            TZ: 'Europe/Amsterdam'
            WEBPASSWORD: '{{ pihole_password }}'
            ServerIP: '192.168.178.234'
        volumes:
            - '/var/lib/concordia-docker/pihole/etc-pihole:/etc/pihole/'
            - '/var/lib/concordia-docker/pihole/etc-dnsmasq.d:/etc/dnsmasq.d/'
        cap_add:
            - NET_ADMIN
        restart: unless-stopped
