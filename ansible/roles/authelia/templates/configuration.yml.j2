################################################################
#                   Authelia configuration                    #
###############################################################
theme: dark
default_redirection_url: https://{{ authelia_domain_name }}

server:
  host: 0.0.0.0
  port: 9091
  asset_path: /etc/authelia/assets/

log:
  level: debug
  file_path: /home/authelia/authelia.log

webauthn:
  disable: false
  display_name: Authelia
  attestation_conveyance_preference: indirect
  user_verification: preferred
  timeout: 60s

ntp:
  address: "time.cloudflare.com:123"
  version: 4
  max_desync: 3s
  disable_startup_check: false

authentication_backend:
  file:
    path: /etc/authelia/.users/users_database.yml
    password:
      algorithm: argon2id
      iterations: 1
      key_length: 32
      salt_length: 16
      memory: 1024
      parallelism: 8

access_control:
  default_policy: two_factor

session:
  name: authelia_session
  expiration: 3600
  inactivity: 3600
  domain: {{ domain_name }}
  same_site: lax
  remember_me_duration: 31d

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  postgres:
    host: 127.0.0.1
    port: 5432
    database: authelia
    username: authelia

notifier:
  disable_startup_check: false
  filesystem:
    filename: /home/authelia/notification.txt

