server {
    server_name ${WEB1090_DOMAIN_NAME};

    listen 443 ssl;
    listen [::]:443 ssl;

    root /var/www/web1090;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    location ^~ /.well-known/ {
        allow all;
    }

    ssl_certificate /etc/letsencrypt/live/${DOMAIN_NAME}/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/${DOMAIN_NAME}/privkey.pem;
}
