[Unit]
Description=Stores ADS-B data in Postgres.
After=syslog.target
After=network.target

[Service]
RestartSec=2s
Type=simple
User=pi
WorkingDirectory=/usr/share/web1090/api
ExecStart=python3 /usr/share/web1090/api/adsb2psql.py
Restart=always
Environment=AVIATIONSTACK_KEY=${AVIATIONSTACK_KEY} DUMP1090_ADDRESS=${DUMP1090_ADDRESS} PSQL_DB=${FR24_PSQL_DB} PSQL_PORT=${PSQL_PORT} PSQL_USER=${FR24_PSQL_USER} PSQL_PASSWORD=${FR24_PSQL_PASSWORD}

[Install]
WantedBy=multi-user.target
